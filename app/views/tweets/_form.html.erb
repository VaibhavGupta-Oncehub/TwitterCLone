<%= form_with model: tweet do |f| %>
  <div>
    <div class="d-flex flex-row align-items-center mb-4">
      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
      <div class="form-outline flex-fill mb-0">
        <%= f.label :title ,class: "form-label" %><br />
        <%= f.text_field :title,required: true,minlength:0,maxlength:100,autofocus: true, autocomplete: "Title", class:"form-control"%>
      </div>
    </div>
  </div>
  
  <div>
    <div class="d-flex flex-row align-items-center mb-4">
      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
      <div class="form-outline flex-fill mb-0">
        <%= f.label :description ,class: "form-label" %><br />
        <%= f.text_area :description,required: true,minlength:0,maxlength:200,autofocus: true, autocomplete: "Description", class:"form-control"%>
      </div>
    </div>
  </div>

    <div>
    <div class="d-flex flex-row align-items-center mb-4">
      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
      <div class="form-outline flex-fill mb-0">
        <%= f.label "User id ",class: "form-label" %><br />
        <%= f.number_field :user_id, readonly: true,value: current_user.id,autocomplete: "User Id", class:"form-control"%>
      </div>
    </div>
  </div>

  <div class="text-center">
    <%= f.submit(:class=>"btn btn-primary") %>
  </div>
<% end %>
