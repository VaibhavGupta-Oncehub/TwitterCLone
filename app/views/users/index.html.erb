<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
  </head>
  <body>
    <main id="main">
      <!-- ======= About Us Section ======= -->
      <section id="about" class="about">
        <div class="container">
          <div class="section-title">
            <h2>All Tweeterites</h2>
          </div>
          <div class="main-body">
            <div class="list-group">
              <% @users.each do |user|%>
                <% if current_user.id === user.id %>
                  <% next %>
                <% end%>
                <a href="<%= user_path(user) %>" class="list-group-item list-group-item-action flex-column align-items-start m-2 w-100" style="border: 2px solid">
                  <div class="d-flex text-center p-5 m-10 w-100">
                    <div id="new_profile" class="f-flex flex-row text-center mb-4">
                      <% if user.image.attached? %>
                        <%= image_tag(user.image, size:100, class:"rounded-circle")%>
                      <%end%>
                    </div>
                     <h5 class="mt-3 w-100">  <%= (user.first_name+ " " + user.last_name).to_s.humanize %></h5>
                      <small class="mb-1 mt-3 w-100">Joined on <%= l user.created_at.to_date, format: :long %></small>
                  </div>
                </a>
              <%end%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div>
  </section>
  <!-- End About Us Section -->
</main>
<!-- End #main -->
</body>
</html>
